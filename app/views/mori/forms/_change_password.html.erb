<h4><%= flash.notice %>
<%= form_tag passwords_path, :method => :post, :id => "password_change_form" do %>
  <div class="form-group">
    <%= label_tag "Current Password" %>
    <%= password_field_tag :password %>
  </div>
  <div class="form-group">
    <%= label_tag "New Password" %>
    <%= password_field_tag :new_password %>
  </div>
  <div class="form-group">
    <%= label_tag "Confirm New Password" %>
    <%= password_field_tag :new_password_confirmation %>
  </div>
  <%= submit_tag "Change Password" %>
<% end %>
